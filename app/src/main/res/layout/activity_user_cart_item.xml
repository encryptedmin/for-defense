<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#f5f5f5"
    tools:context=".user_cart_item">

    <!-- Item Name -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cartItemsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_above="@id/totalPriceContainer"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:background="@drawable/rounded_corner"
        android:layout_marginBottom="16dp" />

    <!-- Total Price Container -->
    <LinearLayout
        android:id="@+id/totalPriceContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonContainer"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/rounded_corner">

        <!-- Total Price Label -->
        <TextView
            android:id="@+id/totalPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Total Price Value -->
        <TextView
            android:id="@+id/totalPriceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚±0.00"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_gravity="end" />
    </LinearLayout>

    <!-- Button Container for Back, Cancel, and Confirm -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Back"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:backgroundTint="#FFC107"
            android:padding="16dp"
            android:layout_marginEnd="8dp" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:backgroundTint="#FF5722"
            android:padding="16dp"
            android:layout_marginEnd="8dp" />

        <!-- Confirm Purchase Button -->
        <Button
            android:id="@+id/confirmButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm Purchase"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50"
            android:padding="16dp"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</RelativeLayout>