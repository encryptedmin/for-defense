<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".activities.StoreSalesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonDailySales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Sales"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/buttonWeeklySales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Sales"
            android:layout_weight="1"
            android:layout_margin="8dp"/>

        <Button
            android:id="@+id/buttonMonthlySales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monthly Sales"
            android:layout_weight="1"
            android:layout_margin="8dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewDateRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a sales period"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/listViewSalesRecords"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="1dp"/>

    <TextView
        android:id="@+id/textViewTotalSales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Sales: $0.00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

</LinearLayout>
